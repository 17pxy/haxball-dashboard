<% if (topPartidos.length > 0 || topGoles.length > 0|| topPartidos.length > 0) {
%>
<div class="container mt-5">
  <div class="row">
    <div class="col-md-4">
      <h1 class="text-center text-black">Top Goles</h1>
      <table class="table table-striped table-hover">
        <thead>
          <tr class="table-dark">
            <th scope="col">Usuario</th>
            <th scope="col">Partidos</th>
            <th scope="col">Goles</th>
          </tr>
        </thead>
        <tbody>
          <% for (var i = 0; i < topGoles.length; i++) { %>
          <tr>
            <td><%= topGoles[i].name %></td>
            <td><%= topGoles[i].partidos %></td>
            <td><%= topGoles[i].goles %></td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>
    <div class="col-md-4">
      <h1 class="text-center text-black">Top Asistencias</h1>
      <table class="table table-striped table-hover">
        <thead>
          <tr class="table-dark">
            <th scope="col">Usuario</th>
            <th scope="col">Partidos</th>
            <th scope="col">Asistencias</th>
          </tr>
        </thead>
        <tbody>
          <% for (var i = 0; i < topAsistencias.length; i++) { %>
          <tr>
            <td><%= topAsistencias[i].name %></td>
            <td><%= topAsistencias[i].partidos %></td>
            <td><%= topAsistencias[i].asistencias %></td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>
    <div class="col-md-4">
      <h1 class="text-center text-black">Top Partidos</h1>
      <table class="table table-striped table-hover">
        <thead>
          <tr class="table-dark">
            <th scope="col">Usuario</th>
            <th scope="col">Partidos</th>
          </tr>
        </thead>
        <tbody>
          <% for (var i = 0; i < topPartidos.length; i++) { %>
          <tr>
            <td><%= topPartidos[i].name %></td>
            <td><%= topPartidos[i].partidos %></td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<% } else { %>

<h1 class="text-center mt-4">
  <strong>No se encontraron estadisticas!</strong>
</h1>
<% } %>
