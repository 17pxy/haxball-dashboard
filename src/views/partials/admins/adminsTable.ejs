<% if (admins.length > 0) { %>
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-10">
      <h1 class="text-center text-black">Lista De Administradores</h1>
      <div class="table-responsive">
        <table class="table table-striped table-hover table-lg text-center">
          <thead>
            <tr class="table-dark">
              <th scope="col">Usuario</th>
              <th scope="col">Jugando</th>
              <th scope="col">Autenticador</th>
              <th scope="col">Discord ID</th>
            </tr>
          </thead>
          <tbody>
            <% for (var i = 0; i < admins.length; i++) { %>
            <tr>
              <td><%= admins[i].name %></td>
              <td><%= admins[i].isPlaying ? "Si" : "No" %></td>
              <td><%= admins[i].auth %></td>
              <td>
                <%= admins[i].discordID ? admins[i].discordID : "No vinculado"
                %>
              </td>
            </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<% } else { %>
<h1 class="text-center mt-4">
  <strong>No se encontraron estadisticas!</strong>
</h1>
<% } %>
